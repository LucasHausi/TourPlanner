         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextArea fx:id="tourInfoInput" prefHeight="200.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextArea>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveTour" text="Save" />
   </VBox>
</GridPane>
