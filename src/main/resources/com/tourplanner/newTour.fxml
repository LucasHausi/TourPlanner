         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="descriptionInput">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextField>
      <Label text="From">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="fromInput">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="fromErrLabel" text="The entered destination is not valid!" textFill="RED" visible="false" />
