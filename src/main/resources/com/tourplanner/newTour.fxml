         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="toInput">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="toErrLabel" text="The entered destination is not valid!" textFill="RED" visible="false" />
